# Activa mod_rewrite
RewriteEngine On

# No aplicar reglas a archivos o carpetas existentes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Enviar el resto a index.php (para rutas MVC)
RewriteRule ^ index.php [QSA,L]

# ðŸ”§ Permite servir CSS/JS/imÃ¡genes
<IfModule mod_headers.c>
  <FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg)$">
    Header set Cache-Control "max-age=2592000, public"
  </FilesMatch>
</IfModule>

# ðŸ”§ Asegura que Apache sirva archivos estÃ¡ticos
AddType text/css .css
AddType application/javascript .js
